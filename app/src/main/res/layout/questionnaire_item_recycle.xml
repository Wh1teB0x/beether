<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
    card_view:cardCornerRadius="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/q_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/q_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/radioFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First" />
            <RadioButton
                android:id="@+id/radioSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second" />
            <RadioButton
                android:id="@+id/radioThird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Third"/>
            <RadioButton
                android:id="@+id/radioFourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fourth" />
            <RadioButton
                android:id="@+id/radioFifth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fifth" />
        </RadioGroup>
    </LinearLayout>
</android.support.v7.widget.CardView>